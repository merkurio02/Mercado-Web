<script>
    $('.producto').toggleClass('opacity-50')
    var carrito = [];

    var guardarProducto = (producto) => {
        var elemento = carrito.find(p => p == producto)  
        console.log(elemento)
        if (elemento == undefined) {
            $(`#${producto}`).toggleClass('opacity-50')
            carrito.push(producto);
            $(`.modal .modal-body`).html(x=>{
                elementos=""
                carrito.forEach(p=>{
                    elementos+=`<img src="${p}.png" alt="" class="card-img" style="width:100px">`
                })
                return elementos
            })
        }
        else {
            $(`#${producto}`).toggleClass('opacity-50')
            carrito.splice(carrito.indexOf(producto), 1);
             $(`.modal .modal-body`).html("");
             $(`.modal .modal-body`).html(x=>{
                elementos=""
                carrito.forEach(p=>{
                    elementos+=`<img src="${p}.png" alt="" class="card-img" style="width:100px">`
                })
                return elementos
            })

        }
        console.log(carrito);
    }
</script>

